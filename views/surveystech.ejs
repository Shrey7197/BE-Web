<!DOCTYPE html>
<html>
    <head>
        <title>AgriDrone</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
        <link rel="stylesheet" href="/stylesheets/main.css">
    </head>
    <body>
        <nav class="navbar navbar-default">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" href="/surveystech">AgriDrone</a>
                </div>
                <div class="collapse navbar-collapse">
                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="/logout">Logout</a></li>
                    </ul>
                </div>
            </div>
            
        </nav>
        
        <div class="container">
            <% if(error && error.length>0) { %>
                <div class="alert alert-danger" role="alert">
                    <%= error %>    
                </div>
            <% } %>
            
            <% if(success && success.length>0) { %>
                <div class="alert alert-success" role="alert">
                    <%= success %>    
                </div>
            <% } %>
        </div>

<div class="container">
    <header class="jumbotron" style="background-image: url('https://3c1703fe8d.site.internapcdn.net/newman/gfx/news/hires/2017/eusfuturecyb.jpg');">
        <div class="container">
            <h1 style="color:white">AgriDrone</h1>
            <h4 style="color:white">Helping farmers to drive down the cost and time required while imporoving the crop yield</h4>
            <p>
                <a class="btn btn-success" href="/surveystech/new">Add a new Survey!</a>
            </p>
        </div>
    </header>

    <div class="row text-center" style="display:flex; flex-wrap:wrap">
        <% surveys.forEach(function(survey){ %>
        <div class="col-md-4 col-sm-6">
            <div class="thumbnail">
                <img style="height:250px; width:380px" src="<%= survey.image %>">
                <div class="caption">
                    <h3><%= survey.farmerUsername %></h3>
                    <h5><%= survey.date %></h5>
                </div>
                <p>
                    <a href="/surveys/<%=survey._id%>" class="btn btn-success">More Info</a>
                </p>
            </div>
        </div>
        <% }) %>        
    </div>
    
</div>

<% include partials/footer %>