<% include partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align:center">Add a new survey</h1>
        <div style="width:30%; margin:25px auto">
            <form action="/surveystech" method="POST">
                <div class="form-group">
                    Username:<input class="form-control" type="text" name="username">
                </div>
                <div class="form-group">
                    Date:<input class="form-control" type="date" name="date">
                </div>
                <div class="form-group">
                    Image:<input class="form-control" type="text" name="image">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-success btn-block">Submit!</button>
                </div>
                <a class="btn btn-lg btn-warning btn-block" href="/surveystech">Go Back!</a>
            </form>    
        </div>
        
    </div>
    

</div>
